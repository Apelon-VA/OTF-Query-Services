<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.ihtsdo</groupId>
        <artifactId>ihtsdo-otf-parent</artifactId>
        <version>2</version>
    </parent>
    <groupId>org.ihtsdo.otf</groupId>
    <artifactId>query-parent</artifactId>
    <version>1.1-sprint2-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>${branch}: (MMP) Query service parent</name>
    <scm>
        <connection>scm:git:https://github.com/IHTSDO/OTF-Query-Services.git</connection>
        <developerConnection>scm:git:git@github.com:IHTSDO/OTF-Query-Services.git</developerConnection>
        <url>https://github.com/IHTSDO/OTF-Query-Services</url>
        <tag>sprint2</tag>
    </scm>
    <distributionManagement>
        <site>
            <id>site</id>
            <url>scm:git:git@github.com:IHTSDO/OTF-Query-Services.git</url>
        </site>
    </distributionManagement>
    <properties>
        <branch>QS ${project.scm.tag}</branch>
        <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jersey-version>2.2</jersey-version>
        <junit.version>4.11</junit.version>
        <terminology-component-chronicle.version>1.1-sprint2-SNAPSHOT</terminology-component-chronicle.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <scope>test</scope>
                <version>${junit.version}</version>
            </dependency>
            <dependency>
                <groupId>net.sf.docbook</groupId>
                <artifactId>docbook-xml</artifactId>
                <version>5.0-all</version>
                <classifier>resources</classifier>
                <type>zip</type>
                <scope>runtime</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.agilejava.docbkx</groupId>
                    <artifactId>docbkx-maven-plugin</artifactId>
                    <version>2.0.14</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-docbook</id>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/docbook.xml</descriptor>
                            </descriptors>
                        </configuration>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <modules>
        <module>query-service</module>
        <module>query-client</module>
        <module>query-integration-tests</module>
        <module>query-implementation</module>
        <module>query-documentation</module>
    </modules>
</project>